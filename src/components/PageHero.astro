---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="page-hero">
  <div class="page-hero-inner">
    <h1 class="page-hero-title">{title}</h1>
  </div>
</section>

<style>
  .page-hero {
    padding-top: 56px; /* header height */
    min-height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-white);
  }

  .page-hero-inner {
    text-align: center;
    padding: 80px 20px;
  }

  .page-hero-title {
    font-family: var(--font-heading);
    font-size: 36px;
    font-weight: 300;
    letter-spacing: 4px;
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .page-hero {
      min-height: 200px;
    }

    .page-hero-title {
      font-size: 28px;
    }
  }
</style>
