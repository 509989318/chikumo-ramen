---
import type { Lang } from '../i18n/translations';
import { t } from '../i18n/translations';
import PageHero from './PageHero.astro';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const profileItems = [
  { label: t(lang, 'companyNameLabel'), value: t(lang, 'companyName') },
  { label: t(lang, 'locationLabel'), value: t(lang, 'companyLocation') },
  { label: t(lang, 'establishedLabel'), value: t(lang, 'established') },
  { label: t(lang, 'capitalLabel'), value: t(lang, 'capital') },
  { label: t(lang, 'ceoLabel'), value: t(lang, 'ceo') },
];
---

<PageHero title={t(lang, 'aboutPageTitle')} />

<section class="about-main">
  <div class="section-inner">
    <div class="section-title-wrapper">
      <h2 class="section-title">{t(lang, 'companyProfile')}</h2>
    </div>
    <dl class="profile-list">
      {profileItems.map((item) => (
        <div class="profile-item">
          <dt>{item.label}</dt>
          <dd>{item.value}</dd>
        </div>
      ))}
    </dl>
  </div>
</section>

<style>
  .about-main {
    padding: 60px 20px 100px;
    text-align: center;
  }

  .section-inner {
    max-width: 700px;
    margin: 0 auto;
  }

  .section-title-wrapper {
    margin-bottom: 40px;
    padding-bottom: 20px;
    border-bottom: 1px solid var(--color-border);
  }

  .section-title {
    font-family: var(--font-primary);
    font-size: 22px;
    font-weight: 300;
    letter-spacing: 2px;
  }

  .profile-list {
    text-align: left;
  }

  .profile-item {
    display: flex;
    border-bottom: 1px solid var(--color-border);
    padding: 20px 0;
  }

  .profile-item dt {
    width: 180px;
    flex-shrink: 0;
    font-size: 14px;
    font-weight: 400;
    letter-spacing: 1px;
  }

  .profile-item dd {
    font-size: 14px;
    letter-spacing: 1px;
    line-height: 1.8;
  }

  @media (max-width: 768px) {
    .profile-item {
      flex-direction: column;
      gap: 4px;
    }

    .profile-item dt {
      width: 100%;
      font-weight: 500;
    }
  }
</style>
