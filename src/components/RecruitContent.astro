---
import type { Lang } from '../i18n/translations';
import { t } from '../i18n/translations';
import PageHero from './PageHero.astro';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
---

<PageHero title={t(lang, 'recruitPageTitle')} />

<section class="recruit-section">
  <div class="recruit-inner">
    <div class="section-title-wrapper">
      <h2 class="section-title">{t(lang, 'recruitJobTitle')}</h2>
    </div>
    <dl class="recruit-list">
      <div class="recruit-item">
        <dt>{t(lang, 'recruitPosition')}</dt>
        <dd>{t(lang, 'recruitPositions')}</dd>
      </div>
    </dl>
    <div class="recruit-cta">
      <a href="https://www.104.com.tw/company/1a2x6bkgq7?jobsource=checkc" target="_blank" rel="noopener noreferrer" class="apply-btn">
        {t(lang, 'recruitApply')}
      </a>
    </div>
  </div>
</section>

<style>
  .recruit-section {
    padding: 40px 20px 100px;
    text-align: center;
  }

  .recruit-inner {
    max-width: 700px;
    margin: 0 auto;
  }

  .section-title-wrapper {
    margin-bottom: 40px;
    padding-bottom: 20px;
    border-bottom: 1px solid var(--color-border);
  }

  .section-title {
    font-family: var(--font-primary);
    font-size: 22px;
    font-weight: 300;
    letter-spacing: 2px;
  }

  .recruit-list {
    text-align: left;
    margin-bottom: 40px;
  }

  .recruit-item {
    display: flex;
    gap: 20px;
    padding: 20px 0;
    border-bottom: 1px solid var(--color-border);
  }

  .recruit-item dt {
    width: 160px;
    flex-shrink: 0;
    font-size: 14px;
    font-weight: 400;
    letter-spacing: 1px;
  }

  .recruit-item dd {
    font-size: 14px;
    letter-spacing: 1px;
    line-height: 1.8;
  }

  .apply-btn {
    display: inline-block;
    padding: 14px 60px;
    background: var(--color-orange);
    color: white;
    font-family: var(--font-secondary);
    font-size: 13px;
    letter-spacing: 2px;
    transition: opacity 0.3s;
  }

  .apply-btn:hover {
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .recruit-item {
      flex-direction: column;
      gap: 4px;
    }
  }
</style>
