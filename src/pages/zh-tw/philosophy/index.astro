---
import Base from '../../../layouts/Base.astro';
import PageHeading from '../../../components/PageHeading.astro';
import { philosophy } from '../../../i18n/translations';
const lang = 'zh-tw' as const;
const t = philosophy[lang];
---
<Base title={t.title} description={t.description} lang={lang}>
  <PageHeading title={t.heading} />

  <section class="py-8 md:py-16 px-6 max-w-4xl mx-auto text-center">
    <h2 class="section-title text-2xl md:text-3xl mb-8 text-black">{t.valuesTitle}</h2>
    <p class="text-base md:text-lg leading-loose whitespace-pre-line">{t.valuesText}</p>
  </section>

  <!-- Photo -->
  <section class="py-8">
    <img src="/wp-content/uploads/2023/11/231222_0445-1-1.png" alt="Philosophy" class="w-full max-w-5xl mx-auto object-cover aspect-[3/1]" />
  </section>

  <!-- Missions -->
  <section class="py-16 md:py-24 px-6 max-w-4xl mx-auto">
    <h2 class="section-title text-2xl md:text-3xl mb-12 text-center text-black">{t.missionsTitle}</h2>
    <div class="space-y-8">
      {t.missions.map((mission, i) => (
        <div class="flex gap-6 items-start">
          <span class="text-4xl md:text-5xl font-['Jost',sans-serif] font-light text-black flex-shrink-0">{i + 1}.</span>
          <p class="text-base md:text-lg leading-relaxed pt-3">{mission}</p>
        </div>
      ))}
    </div>
  </section>
</Base>
