---
import Base from '../../layouts/Base.astro';
import { index } from '../../i18n/translations';
const lang = 'ja-jp' as const;
const t = index[lang];
---
<Base title={t.title} description={t.description} lang={lang} showPreloader={true}>
  <!-- Hero -->
  <section class="relative h-[60vh] md:h-[80vh] flex items-center justify-center bg-black">
    <img src="/wp-content/uploads/2023/11/231222_0086_2-1-1.png" alt="Chikumo" class="absolute inset-0 w-full h-full object-cover opacity-70" />
    <h1 class="relative z-10 text-white text-3xl md:text-5xl lg:text-6xl font-['Noto_Serif_JP',serif] font-light tracking-wider whitespace-pre-line text-center">
      {t.hero}
    </h1>
  </section>

  <!-- Philosophy Section -->
  <section class="py-16 md:py-24 px-6 max-w-4xl mx-auto text-center">
    <h2 class="section-title text-2xl md:text-3xl mb-8 text-black">{t.philosophyTitle}</h2>
    <p class="text-base md:text-lg leading-loose whitespace-pre-line">{t.philosophyText}</p>
  </section>

  <!-- Chicken Section -->
  <section class="relative py-16 md:py-24 px-6">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="section-title text-2xl md:text-3xl mb-8 text-black">{t.chickenTitle}</h2>
      <p class="text-base md:text-lg leading-loose whitespace-pre-line">{t.chickenText}</p>
    </div>
  </section>
</Base>
